<!-- views/linkSelectionPage.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MESD Learning Management System</title>

    <style>
      * {
        font-family: "Lato", sans-serif;
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }

      body {
        background: #f8f9fa;
      }

      .hero-container {
        background-image: linear-gradient(#65c2eb 0%, #26a9e7 100%);
        background-repeat: repeat-x;
        padding: 3rem 2rem;

        border-radius: 0 0 2rem 0;

        margin-bottom: 1rem;
      }

      h1 {
        color: #fff;
      }

      article {
        padding: 1rem;
        margin: 0 auto;
        max-width: 90%;
      }

      ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      li {
        display: block;
        background: #fff;
        box-shadow: 0px 10px 10px 10px rgba(0, 0, 0, 0.0125);
        border-radius: 1rem;
        padding: 1rem;

        cursor: pointer;
      }

      img {
        width: 64px;
      }

      a {
        display: flex;
        gap: 2rem;
      }

      a {
        text-decoration: none;
        color: #26a9e7;
        font-weight: bold;
      }
    </style>
  </head>

  <header class="hero-container">
    <h1>Select an organization</h1>
  </header>

  <body>
    <article>
      <% if (userLinks && userLinks.length > 0) { %>
      <ul>
        <% for(let i=0; i < userLinks.length; i++) { %> <% if (linkPreviews[i]
        != null) { %>
        <li>
          <a href="<%= userLinks[i] %>">
            <!-- Display link preview image and information -->
            <img
              src="<%= linkPreviews[i].favicons[0] %>"
              alt="Link Preview"
              style="max-width: 200px; max-height: 200px"
            />
            <p><%= linkPreviews[i].title %></p>
          </a>
        </li>
        <% } %> <% } %>
      </ul>
      <% } else { %>
      <p>No links available for selection.</p>
      <% } %>
    </article>
  </body>
</html>
