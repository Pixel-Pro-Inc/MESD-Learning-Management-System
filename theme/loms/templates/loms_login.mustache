{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}

<div id="wrapper" class="loms-page-wrapper">

    {{> theme_boost/navbar }}

    {{{ output.standard_top_of_body_html }}}

    {{^ output.if_home_pages}}
        <div class="pages-banner-area">
            <div class="container">
                {{#banner_bg_image}}
                    <div class="pages-banner-content text-center" style="background-image:url('{{banner_bg_image}}');">
                {{/banner_bg_image}}

                {{^ banner_bg_image }}
                    <div class="pages-banner-content text-center">
                {{/banner_bg_image}}
                    {{{ output.navbar }}}
                    <h2>{{{ pageheading }}}</h2>
                </div>
            </div>
        </div>
    {{/output.if_home_pages}}

    <div class="login-area">
        <div class="container">
            <div id="page-content" class="row">
                <div id="region-main-box" class="col-12">
                    <section id="region-main" class="col-12 h-100" aria-label="{{#str}}content{{/str}}">
                    <div class="login-wrapper pt-100 pb-75">
                        <div class="login-container">
                        {{{ output.main_content }}}
                        </div>
                    </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

    {{> theme_boost/footer }}
</div>

</body>
</html>
{{#js}}
  M.util.js_pending('theme_boost/loader');
  require(['theme_boost/loader'], function() {
  M.util.js_complete('theme_boost/loader');
  });
  M.util.js_pending('theme_boost/drawer');
  require(['theme_boost/drawer'], function(mod) {
  mod.init();
  M.util.js_complete('theme_boost/drawer');
  });
{{/js}}
